# Example environment variables for the server
# Copy to `.env` in the server/ folder and edit values as needed.

# Port the HTTP + Socket.IO server will listen on
PORT=3000

# Public base URL where the server is reachable from clients
# Example: http://localhost:3000 or https://mydomain.com
PUBLIC_URL=http://localhost:3000

# Explicit socket URL (if different from PUBLIC_URL)
# Example: http://localhost:3000 or https://sockets.mydomain.com
SOCKET_URL=http://localhost:3000

# Node environment
NODE_ENV=development
